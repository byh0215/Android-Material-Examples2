<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:background="@drawable/shading_tb"
    tools:context="com.saulmm.material.fragments.NavigationFragment" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shading_infor"
        android:id="@+id/infor">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/h_img"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:gravity="bottom"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:id="@+id/u_name"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/h_img"/>
        <TextView
            android:gravity="bottom"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:id="@+id/summary"
            android:textColor="#696969"
            android:textSize="15dp"
            android:layout_toRightOf="@id/h_img"
            android:layout_below="@id/u_name"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/infor"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/myinfor"
            android:background="#00000000"
            android:text="个人中心"
            android:textSize="25dp"
            android:gravity="right" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/myinfor"
            android:background="#00000000"
            android:text="我的设置"
            android:textSize="20dp"
            android:gravity="right"/>

    </RelativeLayout>
</RelativeLayout>
