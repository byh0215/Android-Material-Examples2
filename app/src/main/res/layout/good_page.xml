<?xml version="1.0" encoding="utf-8"?>
<!--展示界面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#FFFFFF"
      android:id="@+id/good">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/reco_guitar"
            android:id="@+id/good_img"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border"
            android:id="@+id/good_price"
            android:text="AAA级云杉面板沙比利背侧板马丁正品"
            android:textSize="20dp"
            android:textColor="#030303"
            android:gravity="left"
            android:layout_below="@+id/good_img"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border"
            android:id="@+id/good_des"
            android:text="$199"
            android:textSize="25dp"
            android:textColor="#ff0000"
            android:gravity="left"
            android:layout_below="@+id/good_price"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="加入购物车"
            android:id="@+id/good_cart"
            android:background="#fff000"
            android:layout_alignBaseline="@+id/good_buy"
            android:layout_alignBottom="@+id/good_buy"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="立即购买"
            android:id="@+id/good_buy"
            android:background="#ff0000"
            android:layout_below="@+id/good_des"
            android:layout_alignParentEnd="true"
            android:onClick="buy_ok"/>

</RelativeLayout>